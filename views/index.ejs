<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
    <!-- Favicon -->
    <link href="img/Logo UMARA.png" rel="icon">

    <title>UMARA</title>
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-white navbar-light py-3 py-lg-0">
        <div class="container">
        <a class="navbar-brand">
            <h1>UMARA</h1>
        </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link active" aria-current="page" href="/">Database</a>
                    <a class="nav-link" href="http://umara.my.id" target="_blank">Homepage UMARA</a>
                </div>
            </div>
            <div class="d-none d-lg-flex align-items-center pl-4">
                <!-- <i class="fa fa-2x fa-mobile-alt text-info mr-3"></i> -->
                <div>
                    <a class="nav-link" href="#">Logout</a>
                </div>
            </div>
        </div>
    </nav>
    
    <div class="container">
        <a class="btn btn-primary mb-2" href="/tambah-data" role="button">Tambah Data</a>
        <!-- <h2 class="mt-4 mb-4"><%= title %></h2> -->

        <table class="table table-striped" id="mytable">
            <thead>
                <th>ID</th>
                <th>Nama</th>
                <th>Email</th>
                <th>Banyak UMKM</th>
                <th>Operasi</th>
            </thead>
            <tbody>
                <%
                if(usersData.length != 0){
                    let n = 1
                    for(let i = 0; i<usersData.length; i++) {
                %>
                <tr>
                    <td><%= n++ %></td>
                    <td><%= usersData[i].nama %></td>
                    <td><%= usersData[i].jurusan %></td>
                    <td><%= usersData[i].jenis_kelamin %></td>
                    <td>
                        <!-- Button trigger modal -->
                        <!-- data-bs-toggle="modal" 
                        data-bs-target="#exampleModal" -->
                        <a class="btn btn-primary edit" href="/edit/<%= usersData[i].id %>" role="button">Edit</a>
                        |
                        <a class="btn btn-danger" href="/hapus/<%= usersData[i].id %>" role="button">Hapus</a>
                    </td>
                </tr>
                    <% } %>
                <% } else{ %>
                <tr>
                    <td class="text-md-center" colspan="5">Data Kosong</td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Modal -->

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
    <script src="js/jquery-3.6.1.min.js"></script>
    <script>
        $(document).ready(() => {
            $('#mytable').on('click', '.edit', () => {
                let user_id = $(this).data('id')
                let user_nama = $(this).data('user_nama')
                let user_jurusan = $(this).data('user_jurusan')
                let user_kelamin = $(this).data('user_kelamin')
                $('#editModal').modal('show')
                $('.user_nama').val("Robi")
                $('.jurusan').val(user_jurusan)
                $('.kelamin').val(user_kelamin)
                console.log(user_kelamin);
            })
        })
    </script>
</body>
</html>